@using IntelligentCarManagement.DataModels
<div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
    <div class="container">
        <div class="row mt-3">
            <div class="col tabParam">
                First Name
            </div>
            <div class="col">
                @FirstName
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Last Name
            </div>
            <div class="col">
                @LastName
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Age
            </div>
            <div class="col">
                @Age
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                City
            </div>
            <div class="col">
                @Address.County, @Address.City
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Street
            </div>
            <div class="col">
                @Address.Street
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public string LastName { get; set; }
    [Parameter]
    public string FirstName { get; set; }
    [Parameter]
    public int Age { get; set; }
    [Parameter]
    public UserAddress Address { get; set; }
}
