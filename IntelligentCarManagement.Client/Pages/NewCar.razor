@inherits NewCarBase

<!-- Modal New Car-->
<div class="modal fade" id="addCar" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="addCarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="addCarLabel">New Car</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <EditForm Model="Car" OnValidSubmit="AddCar">
                <DataAnnotationsValidator />

                <div class="modal-body">

                    @if (isSuccess)
                    {
                        <div class="alert alert-success">
                            <span>@message</span>
                        </div>
                    }
                    @if (isFail)
                    {
                        <div class="alert alert-danger">
                            <span>@message</span>
                        </div>
                    }

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Brand</label>
                        <div class="col-md-10">
                            <InputText id="firstName" class="form-control" @bind-Value="Car.Brand"></InputText>
                            <ValidationMessage For="@(() => Car.Brand)"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Model</label>
                        <div class="col-md-10">
                            <InputText id="firstName" class="form-control" @bind-Value="Car.Model"></InputText>
                            <ValidationMessage For="@(() => Car.Model)"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Fuel Type</label>
                        <div class="col-md-10">
                            <InputSelect id="firstName" class="form-select" @bind-Value="Car.FuelType">
                                <option disabled selected hidden value="">Select a fuel type</option>
                                <option>Electric</option>
                                <option>Petrol</option>
                                <option>Hybrid</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => Car.FuelType)"></ValidationMessage>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Submit</button>
                </div>

            </EditForm>
        </div>
    </div>
</div>