@inherits CarsTableRecordBase

<tr>
    <td>@Car.Id</td>
    <td>@Car.Brand @Car.Model</td>
    <td>@Car.CurrentLocation</td>
    <td>
        @if (Car.IsAvailable)
        {
            <span class="status text-success">&bull;</span> <text>Available</text>
        }
        else
        {
            <span class="status text-danger">&bull;</span> <text>Not Available</text>
        }
    </td>
    <td>
        @if (Car.Driver is not null)
        {
            <a href="#"><i class="bi bi-person-fill"></i>@Car.Driver.User.UserName</a>
        }
        else
        {
            <span>Not Assigned</span>
        }
    </td>
    <td>
        <button type="button" data-bs-toggle="modal" data-bs-target="#editCar-@Car.Id" style="border:none;background:none">
            <i class="bi bi-gear-fill"></i>
        </button>
        <button type="button" data-bs-toggle="modal" data-bs-target="#removeCar-@Car.Id" style="border:none;background:none">
            <i class="bi bi-archive-fill text-danger"></i>
        </button>
    </td>
</tr>

<!-- Modal Remove Warning-->
<div class="modal fade" id="removeCar-@Car.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="removeCarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-danger" id="removeCarLabel">Warning</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                Are you sure you want to remove the car with the id @Car.Id ?
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                <button type="button" class="btn btn-danger" data-bs-dismiss="modal" @onclick="@(() => RemoveCar())">Confirm</button>
            </div>
        </div>
    </div>
</div>

<!-- Modal Edit Car-->
<div class="modal fade" id="editCar-@Car.Id" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="editCarLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title text-dark" id="editCarLabel">New Car</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>

            <EditForm Model="Car" OnValidSubmit="EditCar">
                <DataAnnotationsValidator />

                <div class="modal-body">

                    @if (isSuccess)
                    {
                        <div class="alert alert-success">
                            <span>@message</span>
                        </div>
                    }
                    @if (isFail)
                    {
                        <div class="alert alert-danger">
                            <span>@message</span>
                        </div>
                    }

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Brand</label>
                        <div class="col-md-10">
                            <InputText id="firstName" class="form-control" @bind-Value="Car.Brand"></InputText>
                            <ValidationMessage For="@(() => Car.Brand)"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Model</label>
                        <div class="col-md-10">
                            <InputText id="firstName" class="form-control" @bind-Value="Car.Model"></InputText>
                            <ValidationMessage For="@(() => Car.Model)"></ValidationMessage>
                        </div>
                    </div>

                    <div class="form-group row mt-2">
                        <label for="firstName" class="col-md-2 col-form-label">Fuel Type</label>
                        <div class="col-md-10">
                            <InputSelect id="firstName" class="form-select" @bind-Value="Car.FuelType">
                                <option disabled selected hidden value="">Select a fuel type</option>
                                <option>Electric</option>
                                <option>Petrol</option>
                                <option>Hybrid</option>
                            </InputSelect>
                            <ValidationMessage For="@(() => Car.FuelType)"></ValidationMessage>
                        </div>
                    </div>
                </div>

                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    <button type="submit" class="btn btn-info">Update</button>
                </div>

            </EditForm>
        </div>
    </div>
</div>