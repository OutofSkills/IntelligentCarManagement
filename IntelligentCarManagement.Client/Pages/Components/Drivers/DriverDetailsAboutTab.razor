@using IntelligentCarManagement.Models;
<div class="tab-pane fade show active" id="about" role="tabpanel" aria-labelledby="about-tab">
    <div class="container">
        <div class="row mt-3">
            <div class="col tabParam">
                First Name
            </div>
            <div class="col">
                @Driver.User.FirstName
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Last Name
            </div>
            <div class="col">
                @Driver.User.LastName
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Age
            </div>
            <div class="col">
                @Driver.User.Age
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                City
            </div>
            <div class="col">
                @Driver.User.Address.County, @Driver.User.Address.City
            </div>
        </div>
        <div class="row mt-3">
            <div class="col tabParam">
                Street
            </div>
            <div class="col">
                @Driver.User.Address.Street
            </div>
        </div>
    </div>
</div>

@code {
    [Parameter]
    public Driver Driver { get; set; }
}
