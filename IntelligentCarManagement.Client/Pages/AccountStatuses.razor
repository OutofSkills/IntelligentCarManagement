@page "/account-statuses"
@inherits AccountStatusBase

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-5">
            <h2>Account Status <b>Management</b></h2>
        </div>
        <div class="col-7" align="right">
            <a class="btn btn-outline-info" data-bs-toggle="modal" data-bs-target="#addStatus"><i class="bi bi-plus-circle"></i> <span>Add New Status</span></a>
        </div>
    </div>


    @if (Statuses == null)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-2">
            <div class="table-responsive">
                <Table ColumnNames="@(new List<string> {"#", "Status", "Description"})">
                    @foreach (var status in Statuses)
                    {
                        <AccountStatusTableRecord Status="status" OnDataChange="DataChanged"></AccountStatusTableRecord>
                    }
                </Table>
            </div>
        </div>

        <div class="clearfix">
            <Pagination NumberOfPages="NumberOfPages" CurrentPage="CurrentPage" Radius="3" SelectedPage="SelectedPage"></Pagination>
        </div>
    }
</div>

<NewStatus OnDataChanged="DataChanged"></NewStatus>