@page "/cars"
@inherits CarsBase

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-5">
            <h2>Cars <b>Management</b></h2>
        </div>
        <div class="col-7" align="right">
            <a href="cars/newCar" class="btn btn-outline-info"><i class="bi bi-plus-circle"></i> <span>Add New Car</span></a>
        </div>
    </div>


    @if (Cars == null)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-2">
            <div class="table-responsive">
                <Table ColumnNames="@(new List<string> {"#", "Brand/Model", "Current Location", "Available", "Driver", "Actions"})">
                    @foreach (var car in Cars)
                    {
                        <CarsTableRecord Car="car" OnCarRemoved="CarRemoved"></CarsTableRecord>
                    }
                </Table>
            </div>
        </div>

        <div class="clearfix">
            <Pagination NumberOfPages="NumberOfPages" CurrentPage="CurrentPage" Radius="3" SelectedPage="SelectedPage"></Pagination>
        </div>
    }
</div>