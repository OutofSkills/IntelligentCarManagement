@page "/driver-requests";
@inherits DriverRequestsBase

<div class="container-fluid">
    <div class="row">
        <div class="col-5">
            <h2>Driver Requests <b>Management</b></h2>
        </div>
        <div class="col-7" align="right">
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Filled.Add" Color="Color.Info" Link="/driver-request">Add New Request</MudButton>
        </div>
    </div>

    @if (Drivers == null)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-2">
            <div class="table-responsive">
                <Table ColumnNames="@(new List<string> {"#", "Name", "Experience", "About", "Car", "Request status", "Actions"})">
                    @foreach (var driver in Drivers)
                    {
                        <DriverRequestsTableRecord Driver="driver" OnDataChange="DataChanged"></DriverRequestsTableRecord>
                    }
                </Table>
            </div>
        </div>

        <div class="clearfix">
            <Pagination NumberOfPages="NumberOfPages" CurrentPage="CurrentPage" Radius="3" SelectedPage="SelectedPage"></Pagination>
        </div>
    }
</div>
