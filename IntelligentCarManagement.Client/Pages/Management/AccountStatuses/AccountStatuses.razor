@page "/account-statuses"
@inherits AccountStatusBase

<div class="container-fluid">
    <div class="row mt-2">
        <div class="col-5">
            <h2>Account Status <b>Management</b></h2>
        </div>
        <div class="col-7" align="right">
            <MudButton Variant="Variant.Outlined" StartIcon="@Icons.Filled.Add" Color="Color.Info"  OnClick="@((e) =>OpenAddDialogAsync())">Add New Status</MudButton>
        </div>
    </div>


    @if (Statuses == null)
    {
        <div class="d-flex justify-content-center">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else
    {
        <div class="row mt-2">
            <div class="table-responsive">
                <Table ColumnNames="@(new List<string> {"#", "Status", "Description"})">
                    @foreach (var status in Statuses)
                    {
                        <AccountStatusTableRecord Status="status" OnDataChange="DataChanged"></AccountStatusTableRecord>
                    }
                </Table>
            </div>
        </div>

        <div class="clearfix">
            <Pagination NumberOfPages="NumberOfPages" CurrentPage="CurrentPage" Radius="3" SelectedPage="SelectedPage"></Pagination>
        </div>
    }
</div>
