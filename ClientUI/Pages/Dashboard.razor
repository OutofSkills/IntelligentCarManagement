        new EarningReport { Name = "Garderoben", Title = "Driver", Avatar = "https://avatars2.githubusercontent.com/u/10367109?s=460&amp;u=2abf95f9e01132e8e2915def42895ffe99c5d2c6&amp;v=4", Earnings = 420, DeservedClients = 17},
